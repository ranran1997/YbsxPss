<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/textcolor1"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#ececec"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_myclient_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginRight="@dimen/y30"
            android:layout_marginLeft="@dimen/y30"
            android:textSize="14sp"
            android:text="山东寿光学院一中"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_myclient_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginRight="@dimen/y30"
            android:layout_marginLeft="@dimen/y30"
            android:textSize="14sp"
            android:text="山东寿光学院一中"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_myclient_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginRight="@dimen/y30"
            android:layout_marginLeft="@dimen/y30"
            android:textSize="14sp"
            android:text="张三"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tv_item_myclient_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/x30"
            android:text="1833456123"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:layout_marginBottom="@dimen/y8"
            android:layout_marginRight="@dimen/y30"
            android:layout_marginLeft="@dimen/y30"
            android:textSize="14sp"
            android:text="合作期限："
            android:textColor="#000000" />
        <TextView
            android:id="@+id/tv_item_myclient_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y16"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginRight="@dimen/x30"
            android:text="1833456123"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80">

        <TextView
            android:id="@+id/tv_item_myclient_zc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/y30"
            android:paddingRight="@dimen/y30"
            android:text="正常"
            android:textColor="#359f01" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_item_myclient_hz"
            android:layout_width="@dimen/x150"
            android:layout_height="match_parent"
            android:text="申请合作"
            android:textSize="14sp"
            android:background="@drawable/button_color_selector"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btn_item_myclient_sc"
            android:layout_width="@dimen/x150"
            android:layout_height="match_parent"
            android:text="删除"
            android:textSize="14sp"
            android:background="@drawable/button_color_selector"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btn_item_myclient_dz"
            android:layout_width="@dimen/x150"
            android:layout_height="match_parent"
            android:text="商品定制"
            android:textSize="14sp"
            android:background="@drawable/button_color_selector"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y10"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
</LinearLayout>