<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textcolor1"
    tools:context="com.ning.ybsxpss.activity.IssueGoodsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">
        <ImageView
            android:id="@+id/iv_issue_goods_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="发布商品"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/sp_issue_goods_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@drawable/spnner"
                android:layout_margin="@dimen/y10"/>
            <Spinner
                android:id="@+id/sp_issue_goods_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@drawable/spnner"
                android:layout_margin="@dimen/y10"/>
            <com.ning.ybsxpss.view.MyGridView
                android:id="@+id/gridview_issue_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y50"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:numColumns="5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_issue_goods_sqtj"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y80"
                    android:text="申请添加新品种"
                    android:gravity="center|right"
                    android:textColor="#359f01"
                    android:layout_marginRight="@dimen/x40"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_issue_goods_xyb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80"
                android:background="@drawable/button_color_selector"
                android:layout_margin="@dimen/y30"
                android:text="下一步"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
