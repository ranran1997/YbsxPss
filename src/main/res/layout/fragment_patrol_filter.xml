<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#359f01">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:text="筛选"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:id="@+id/ll_task_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="我的客户"/>

        <Spinner
            android:id="@+id/sp_filter_wdkh"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70"
            android:background="@drawable/spnner"
            android:layout_margin="@dimen/y20"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="选择时间"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y20">
        <TextView
            android:id="@+id/tv_filter_kssj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="配送开始日期"
            android:textColorHint="#aaaaaa"
            android:background="@drawable/edit"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y10"
            android:textColor="#000000"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_filter_jssj"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y70"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="配送结束日期"
            android:textColorHint="#aaaaaa"
            android:background="@drawable/edit"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/y10"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_color_selector"
            android:text="重置"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_margin="@dimen/y10"
            />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/button_color_selector"
            android:textColor="#ffffff"
            android:text="确定"
            android:layout_margin="@dimen/y10"
            />
    </LinearLayout>
</LinearLayout>