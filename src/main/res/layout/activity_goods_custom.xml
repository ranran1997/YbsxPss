<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">

        <ImageView
            android:id="@+id/iv_goods_custom_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商品定制"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_goods_custom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:windowSoftInputMode="adjustPan"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_gravity="bottom">

        <CheckBox
            android:id="@+id/cb_goods_custom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y20"
            android:gravity="center"
            android:text="全选"
            android:button="@drawable/checkbox_style"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_goods_custom_dd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingRight="@dimen/x20"
            android:text="共选择了0个商品"
            android:textColor="#000000"
            android:textSize="13sp" />

        <Button
            android:id="@+id/tv_goods_custom_bc"
            android:layout_width="@dimen/y160"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y20"
            android:background="@drawable/button_color_selector"
            android:gravity="center"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
