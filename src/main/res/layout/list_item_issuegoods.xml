<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@color/textcolor1"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#ececec"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y250">

        <ImageView
            android:id="@+id/item_issuegoods_image"
            android:layout_width="@dimen/y220"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y20"
            android:layout_marginLeft="@dimen/y20"
            android:layout_marginTop="@dimen/y20"
            android:scaleType="fitXY"
            android:src="@drawable/timg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y20"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:text="商品名称："
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/item_issuegoods_name"
                    android:layout_width="@dimen/x200"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/y8"
                    android:textSize="14sp"
                    android:background="@drawable/smailedit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x40"
                    android:gravity="center"
                    android:text="单价："
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/item_issuegoods_danjia"
                    android:layout_width="@dimen/x80"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/y8"
                    android:layout_height="match_parent"
                    android:background="@drawable/smailedit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:text="元/"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <Spinner
                    android:id="@+id/item_issuegoods_jin"
                    android:layout_width="@dimen/x80"
                    android:textSize="14sp"
                    android:layout_height="match_parent"
                    android:background="@drawable/smailedit"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x20"
                    android:gravity="center"
                    android:text="起订量："
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <EditText
                    android:id="@+id/item_issuegoods_qdj"
                    android:layout_width="@dimen/x80"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:paddingLeft="@dimen/y8"
                    android:background="@drawable/smailedit"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:paddingTop="@dimen/y20"
        android:paddingBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x400">
        <Button
            android:id="@+id/item_issuegoods_sctp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_color_selector"
            android:layout_marginRight="@dimen/x20"
            android:text="上传图片"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/item_issuegoods_delect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_color_selector"
            android:layout_marginRight="@dimen/x20"
            android:text="删除"
            android:textSize="14sp"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
</LinearLayout>