<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <LinearLayout
            android:layout_marginLeft="@dimen/x40"
            android:layout_width="80dp"
            android:gravity="right|center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="密码:"
                android:textColor="#000000" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_found_paw_paw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/y10"
            android:hint="长度为6-18个字符,包含数字和字母"
            android:layout_margin="@dimen/y10"
            android:textColorHint="#aaaaaa"
            android:background="@drawable/edit"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
        <LinearLayout
            android:layout_marginLeft="@dimen/x40"
            android:layout_width="80dp"
            android:gravity="right|center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="*"
                android:textColor="#ff0000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="确认新密码:"
                android:textColor="#000000" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_found_paw_qrpaw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y10"
            android:background="@drawable/edit"
            android:paddingLeft="@dimen/y10"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_found_paw_zc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_margin="@dimen/y30"
        android:background="@drawable/button_color_selector"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
