<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">
        <ImageView
            android:id="@+id/iv_alter_paw_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="修改密码"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#ebeceb"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"/>

    <LinearLayout
        android:background="@color/textcolor1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:layout_width="110dp"
            android:gravity="right|center"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x40"
            android:text="旧密码："
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_alter_paw_jmm"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/y10"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y10"
            android:background="@drawable/edit"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:background="@color/textcolor1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:layout_width="110dp"
            android:gravity="right|center"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x40"
            android:text="新密码："
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_alter_paw_xmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/y10"
            android:paddingLeft="@dimen/y10"
            android:background="@drawable/edit"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:background="@color/textcolor1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:paddingLeft="@dimen/x40"
            android:text="确认新密码："
            android:textColor="#000000" />

        <EditText
            android:id="@+id/et_alter_paw_qrxmm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:paddingLeft="@dimen/y10"
            android:inputType="textPassword"
            android:background="@drawable/edit"
            android:layout_margin="@dimen/y10"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_alter_paw_qd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_margin="@dimen/y30"
        android:background="@drawable/button_color_selector"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>
