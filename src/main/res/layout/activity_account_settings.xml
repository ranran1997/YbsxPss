<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">

        <ImageView
            android:id="@+id/iv_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="账户设置"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:background="@color/textcolor1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:background="#ebeceb"/>
        <LinearLayout
            android:background="@color/textcolor1"
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_settings_xm1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:paddingLeft="@dimen/x20"
                    android:textSize="14sp"
                    android:paddingBottom="@dimen/y10"
                    android:textColor="#000000"
                    android:gravity="left|bottom"/>
                <TextView
                    android:id="@+id/tv_settings_xm2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="姓名"
                    android:textSize="14sp"
                    android:paddingTop="@dimen/y10"
                    android:paddingLeft="@dimen/x20"
                    android:textColor="#000000"
                    android:gravity="left|top"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/jinru"
                android:paddingRight="@dimen/x20"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#aaaaaa"/>
        <LinearLayout
            android:background="@color/textcolor1"
            android:id="@+id/tv_settings_dwxx"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="单位信息"
                    android:paddingLeft="@dimen/x40"
                    android:gravity="left|center"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jinru"
                    android:paddingRight="@dimen/x30"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/textcolor1"
            android:id="@+id/tv_settings_xgmm"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="修改密码"
                    android:paddingLeft="@dimen/x40"
                    android:gravity="left|center"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/jinru"
                    android:paddingRight="@dimen/x30"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
        </LinearLayout>
        <LinearLayout
            android:background="@color/textcolor1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="版本号"
                    android:paddingLeft="@dimen/x40"
                    android:gravity="left|center"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_settings_bbh_name"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="v1.1"
                    android:paddingLeft="@dimen/x40"
                    android:gravity="right|center"
                    android:paddingRight="@dimen/x30"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_settings_tcdl"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:background="@drawable/button_color_selector"
            android:text="退出登录"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ececec"/>
    </LinearLayout>
</LinearLayout>
