<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textcolor1"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">
        <ImageView
            android:id="@+id/iv_message_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="个人信息"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="#ebeceb"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="姓名:"
                    android:gravity="right|center"
                    android:layout_marginLeft="@dimen/x40"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/et_message_xm"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/y10"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x10"
                    android:background="@drawable/edit"
                    android:textSize="14sp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="手机号:"
                    android:gravity="right|center"
                    android:layout_marginLeft="@dimen/x40"
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/et_message_sjh"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/y10"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit"
                    android:layout_margin="@dimen/x10"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="邮箱:"
                    android:gravity="right|center"
                    android:layout_marginLeft="@dimen/x40"
                    android:textColor="#000000"
                    />
                <EditText
                    android:id="@+id/et_message_yx"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/y10"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit"
                    android:layout_margin="@dimen/x10"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"/>
            <Button
                android:id="@+id/btn_message_bc"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:background="@drawable/button_color_selector"
                android:text="保存"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>