<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#359f01">
        <ImageView
            android:id="@+id/iv_yifahu_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="订单详情"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:background="@color/textcolor1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="#ebeceb" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center"
                    android:text="收货人:"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tv_yifahuo_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tv_yifahuo_userphone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="@dimen/x30"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/y30"
                    android:layout_marginRight="@dimen/y30"
                    android:gravity="center|left"
                    android:text="收货地址:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_useraddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center"
                    android:text="配送商:"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tv_yifahuo_pssname"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tv_yifahuo_pssphone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingRight="@dimen/x30"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="地址:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_pssaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="#ebeceb"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="订单编号:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_ddbh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="订单状态:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_ddzt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="下单人:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_xdren"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="下单时间:"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tv_yifahuo_xdsj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/y30"
                    android:layout_marginLeft="@dimen/y30"
                    android:gravity="center|left"
                    android:text="派送时间:"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/tv_yifahuo_pssj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:gravity="center|left"
                    android:ellipsize="end"
                    android:textColor="#000000" />
            </LinearLayout>
            <com.ning.ybsxpss.view.ListViewForScrollView
                android:id="@+id/listview_yifahuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.ning.ybsxpss.view.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
